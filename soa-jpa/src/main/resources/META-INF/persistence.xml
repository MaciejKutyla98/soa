<?xml version ="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation ="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">
    <persistence-unit name="soa">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>pl.edu.agh.entity.StudentEntity</class>
        <class>pl.edu.agh.entity.AdresEntity</class>
        <class>pl.edu.agh.entity.ArticlesEntity</class>
        <class>pl.edu.agh.entity.Courses</class>
        <class>pl.edu.agh.entity.HomeTownEntity</class>
        <properties>
            <property name="hibernate.connection.datasource" value="java:jboss/datasources/kutyla"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/admin-database"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop" />
            <property name="hibernate.connection.username" value="admin"/>
            <property name="hibernate.connection.password" value="admin"/>
            <property name="hibernate.show_sql" value="true" /> <!-- Show SQL in console -->
            <property name="hibernate.format_sql" value="true" /> <!-- Show SQL formatted -->
        </properties>
    </persistence-unit>
</persistence>